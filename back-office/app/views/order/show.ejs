<%- include('../partials/header.ejs') %>

<h1>Commande de l'utilisateur <%= order.email %></h1>
<p><strong>Nom :</strong> <%= order.lastname %></p>
<p><strong>Prénom :</strong> <%= order.firstname %></p>
<p><strong>Numéro de commande :</strong> <%= order.id %></p>
<p><strong>Prix total :</strong> <%= order.totalPrice %></p>
<p><strong>Statut :</strong> <%= order.statusLabel %></p>
<p><strong>Créée le :</strong> <%= order.createdAtFormatted %></p>
<p><strong>Date de mise à jour :</strong> <%= order.updatedAtFormatted %></p>


<a href="/orders" class="btn btn-secondary mt-3">Retour à la liste</a>
<a href="/orders/<%= order.id %>/edit" class="btn btn-warning mt-3">Modifier</a>

