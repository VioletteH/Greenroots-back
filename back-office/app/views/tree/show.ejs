<%- include('../partials/header.ejs') %>

<h1><%= tree.name %></h1>
<p><strong>Nom Scientifique :</strong> <%= tree.scientificName %></p>
<p><strong>Categorie :</strong> <%= tree.category %></p>
<p><strong>Description :</strong> <%= tree.description %></p>
<p><strong>CO2 absorbé :</strong> <%= tree.co2 %></p>
<p><strong>O2 créé :</strong> <%= tree.o2 %></p>
<p><strong>Prix :</strong> <%= tree.price %> €</p>
<p><strong>Image :</strong></p>
<% if (tree.image) { %>
  <img src="<%= tree.image %>" class="img-fluid" style="max-width: 300px;">
<% } %>

<table class="table table-bordered mt-3">
  <thead>
    <tr>
      <th>Forêt associée</th>
      <th>Restant à planter</th>
    </tr>
  </thead>
  <tbody>
    <% if (tree.forestname && tree.forestname.length > 0) { %>
      <% for (let i = 0; i < tree.forestname.length; i++) { %>
        <tr>
          <td><%= tree.forestname[i] %></td>
          <td><%= tree.stock[i] %></td>
        </tr>
      <% } %>
    <% } else { %>
      <tr>
        <td colspan="2" class="text-center">Aucune forêt associée</td>
      </tr>
    <% } %>
  </tbody>
</table>

<a href="/trees" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Retour à la liste</a>
<a href="/trees/<%= tree.id %>/edit" class="btn btn-warning">Modifier l'arbre</a>

<%- include('../partials/footer.ejs') %>
