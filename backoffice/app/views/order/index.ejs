<%- include('../partials/header.ejs') %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Liste des commandes</h1>
  </div>

  <% if (orders.length === 0) { %>
    <div class="alert alert-info">Aucune commande enregistrée.</div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% orders.forEach(order => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">Commande n°<%= order.id %></h5>
              <p class="mb-1"><strong>Email utilisateur :</strong> <%= order.email %></p>
              <p class="mb-1"><strong>Prix total :</strong> <%= order.totalPrice %> €</p>
              <p class="mb-1"><strong>Statut :</strong>
                <% let status = order.statusLabel.toLowerCase(); %>
                <% if (status === 'en cours') { %>
                  <span class="badge bg-warning text-dark">
                    <i class="bi bi-clock-history me-1"></i>En cours
                  </span>
                <% } else if (status === 'terminée') { %>
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle-fill me-1"></i>Terminée
                  </span>
                <% } else if (status === 'annulée') { %>
                  <span class="badge bg-danger">
                    <i class="bi bi-x-circle-fill me-1"></i>Annulée
                  </span>
                <% } else { %>
                  <span class="badge bg-secondary"><%= order.statusLabel %></span>
                <% } %>
              </p>
              <p class="mb-1"><strong>Créée le :</strong> <%= order.createdAtFormatted %></p>
            </div>
            <div class="card-footer bg-white d-flex justify-content-around gap-1">
              <a href="/orders/<%= order.id %>" class="btn btn-outline-info btn-sm">Voir</a>
              <a href="/orders/<%= order.id %>/edit" class="btn btn-outline-warning btn-sm">Modifier</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <%- include('../partials/pagination.ejs') %>
</div>

<%- include('../partials/footer.ejs') %>
