<%- include('../partials/header.ejs') %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Liste des forêts</h1>
    <a href="/forests/add" class="btn btn-primary">Ajouter une forêt</a>
  </div>

  <% if (forests.length === 0) { %>
    <div class="alert alert-info">Aucune forêt enregistrée pour le moment.</div>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% forests.forEach(forest => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <% if (forest.image) { %>
              <img src="<%= forest.image %>" class="card-img-top" alt="<%= forest.name %>" style="object-fit: cover; height: 180px;">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= forest.name %></h5>
              <p class="mb-1"><strong>Association :</strong> <%= forest.association %></p>
              <p class="mb-1"><strong>Pays :</strong> <%= forest.country %></p>
            </div>
            <div class="card-footer bg-white d-flex justify-content-around gap-1">
              <a href="/forests/<%= forest.id %>" class="btn btn-outline-info btn-sm">Voir</a>
              <a href="/forests/<%= forest.id %>/edit" class="btn btn-outline-warning btn-sm">Modifier</a>
              <form action="/forests/<%= forest.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Supprimer cette forêt ?')">
                <button type="submit" class="btn btn-outline-danger btn-sm">Supprimer</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <%- include('../partials/pagination.ejs') %>
</div>

<%- include('../partials/footer.ejs') %>
