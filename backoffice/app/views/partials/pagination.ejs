<nav aria-label="Pagination des commandes" class="mt-5">
  <ul class="pagination justify-content-center p-2">

    <li class="page-item <%= hasPrevious ? '' : 'disabled' %>">
      <a class="page-link d-flex align-items-center" href="?page=<%= currentPage - 1 %>">
        <i class="bi bi-arrow-left me-1"></i> Précédent
      </a>
    </li>

    <% for(let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= i === currentPage ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
      </li>
    <% } %>

    <li class="page-item <%= hasNext ? '' : 'disabled' %>">
      <a class="page-link d-flex align-items-center" href="?page=<%= currentPage + 1 %>">
        Suivant <i class="bi bi-arrow-right ms-1"></i>
      </a>
    </li>

  </ul>
</nav>
